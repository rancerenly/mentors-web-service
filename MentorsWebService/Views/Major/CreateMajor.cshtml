@model ViewMajor
@{
    ViewData["Title"] = "CreateMajor";
}

<h1>CreateMajor</h1>

<div>
    <form asp-action="CreateMajor" asp-controller="Major" method="post">
        <div class="mb-3">
                        <label for="exInputTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="exInputTitle" asp-for="Title">
                        <div id="exHelpTitle" class="form-text"></div>
                    </div>
                    <div class="mb-3">
                        <label for="exInputDescription" class="form-label">Description</label>
                        <input type="text" class="form-control" id="exInputDescription" asp-for="Description">
                        <div id="exHelpDescription" class="form-text">Описание курса</div>
                    </div>
        <button type="submit" class="btn btn-primary">Создать курс</button>
    </form>
</div>